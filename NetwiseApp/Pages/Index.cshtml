@page
@model NetwiseApp.Pages.IndexModel
@{
	<div >
		<form method="post">
			<button type="submit" style="background-color: #2b2b2b; color: white; padding:  12px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 24px 2px; cursor: pointer; border-radius: 10px;">Get Cat Fact</button>
		</form>

		@if (!string.IsNullOrEmpty(Model.CatFactMessage))
		{
			<div>
				<h3>Cat Fact:</h3>
				<p>@Model.CatFactMessage</p>
			</div>
		}
	</div>
}
